<% if post.favorited_by?(current_user) %>
  <span>
    <%= link_to(post_favorites_path(post), class:"text-dark", method: :delete, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true"style="color: red;"></i> <%= post.favorites.count %>
    <% end %>
  </span>
<% else %>
  <span>
    <%= link_to(post_favorites_path(post), class:"text-dark", method: :post, remote: true) do %>
      <i class="fa fa-heart" aria-hidden="true"></i> <%= post.favorites.count %>
    <% end %>
  </span>
<% end %>