<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>ニックネーム</th>
      <th>自己紹介</th>
      <th>フォロー数</th>
      <th>フォロワー数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="follow_<%= user.id %>">
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %></td>
        <td><%= user.name %></td>
        <td><%= user.nickname %></td>
        <td><%= user.introduction %></td>
        <td class="following-count"><%= user.following.count %></td>
        <td class="followers-count"><%= user.followers.count %></td>
        <td class="follow_form mb-5" ><%= render 'relationships/follow_form', user: user %></td>
      </tr>
    <% end %>
  </tbody>
</table>