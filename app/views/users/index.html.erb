<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>名前</th>
      <th>ニックネーム</th>
      <th>自己紹介</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %></td>
        <td><%= user.name %></td>
        <td><%= user.nickname %></td>
        <td><%= user.introduction %></td>
        <td><%= "フォロー数: #{user.followers.count}" %></td>
        <td><%= "フォロワー数: #{user.following.count}" %></td>
        <td><%= render 'relationships/follow_form', user: user %></td>
      </tr>
    <% end %>
  </tbody>
</table>