<div class="card-list-containar py-5">

  <% if @posts.present? %>
    <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to(post_path(post), class:"text-dark") do %>
                <span><%= post.title %></span>
              <% end %>
            </p>
            <p class="card-text">内容：<%= post.content %></p>
            <span><i class="fas fa-user"></i> By <%= post.user.nickname %> ｜ </span>
            <%= render 'favorites/favorite', post: post %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <p>まだ投稿はありません</p>
  <% end %>

</div>