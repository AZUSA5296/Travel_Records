<div class="post-detail py-5 bg-light">
  <div class="card w-75 mx-auto mt-4 shadow-lg">
    <span><%= @post.date.strftime('%Y年%m月%d日') %></span>
    <%= attachment_image_tag @post, :image, class:"card-img-top"; %>
    <div class="card-body" id="comment_<%= @post.id %>">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@post.user) do %>
            <%= attachment_image_tag @post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10" id="favorite_<%= @post.id %>">
          <p class="card-title">
            <%= link_to(post_path(@post.id), class:"text-dark") do %>
              <strong><span><%= @post.title %></span></strong>
            <% end %>
          </p>
          <p class="card-title">思い出：<%= @post.content %></p>
          <div><%= render "posts/index_tag_list", post: @post %></div>
          <span><i class="fas fa-user"></i> By <%= @post.user.nickname %> ｜ </span>
          <span><i class="fa fa-calendar"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>
          <!--いいね機能-->
          <span class="favorite"><%= render 'favorites/favorite', post: @post %>｜ </span>
          <% if @post.user == current_user %>
            <span><%= link_to "削除", post_path(@post), class:"text-dark", method: :delete %>｜ </span>
            <span><%= link_to "編集", edit_post_path(@post), class:"text-dark" %></span>
          <% end %>
        </div>
      </div>
      <!--コメント機能-->
      <div class="comment">
         <%= render "comments/comment", post: @post, comment: @comment %>
      </div>
    </div>
  </div>
</div>