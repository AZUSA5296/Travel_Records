<div class="card-list-containar py-5">

  <% if @posts.present? %>
    <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <span><%= I18n.l post.date, format: :long %></span>
      <%= link_to post_path(post) do %>
        <%= attachment_image_tag post, :image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= link_to user_path(post.user) do %>
              <%= attachment_image_tag post.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            <% end %>
          </div>
          <div class="col-10" id="favorite_<%= post.id %>">
            <p class="card-title">
              <%= link_to(post_path(post), class:"text-dark") do %>
                <span><%= post.title %></span>
              <% end %>
            </p>
            <p class="card-text">思い出：<%= post.content %></p>
            <div><%= render "posts/show_tag_list", post: post %></div>
            <span><i class="fas fa-user"></i> By <%= post.user.nickname %> ｜ </span>
            <span class="favorite"><%= render 'favorites/favorite', post: post %>｜ </span>
            <span>
              <%= link_to post_path(post.id), class:"text-dark" do %>
                コメント<%= post.comments.count %>｜
              <% end %>
            </span>
            <span><%= post.status ? '非公開' : '公開' %></span>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <p>まだ投稿はありません</p>
  <% end %>

</div>
